{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Run",
            "type": "shell",
            "command": "mingw32-make -f MakeFile; ./bin/main.exe",
            "problemMatcher": [
                "$jshint"
            ]
        },
        {
            "label": "Build only",
            "type": "shell",
            "command": "mingw32-make -f MakeFile"
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "./bin/main.exe"
        },
        {
            "label": "Build to distribute",
            "type": "shell",
            "command": "g++ -Iinclude -Iinclude/SDL -Iinclude/headers -Llib -o bin/main src/*.cpp -lmingw32 -lSDL2main -lSDL2_gfx -lSDL2 -lSDL2_image -mwindows"
        }
    ]
}
