{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Run",
            "type": "shell",
            "command": "mingw32-make -f MakeFile; ./bin/asteroids.exe",
            "problemMatcher": [
                "$jshint"
            ]
        },
        {
            "label": "Build only",
            "type": "shell",
            "command": "mingw32-make -f MakeFile"
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "./bin/asteroids.exe"
        },
        {
            "label": "Build to distribute",
            "type": "shell",
            "command": "g++ -Iinclude -Iinclude/SDL -Iinclude/headers -Llib -o bin/asteroids src/*.cpp -lmingw32 -lSDL2main -lSDL2_gfx -lSDL2_ttf -lSDL2 -lSDL2_image -mwindows -static-libgcc -static-libstdc++"
        }
    ]
}
